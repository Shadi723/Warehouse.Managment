<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txtView_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25/15/2019"/>

    <TextView
        android:id="@+id/txtView_transaction_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView_transaction_date"
        tools:text="5464461-45"/>

    <TextView
        android:id="@+id/txtView_transaction_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView_transaction_code"
        tools:text="this is the description of the this item"/>

</RelativeLayout>