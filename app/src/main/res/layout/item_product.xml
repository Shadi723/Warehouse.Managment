<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/image_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBar_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/imgView_product"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_section"
        android:layout_toRightOf="@id/image_section"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtView_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Product Name"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txtView_product_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Product Company"
            android:padding="8dp"
            android:layout_below="@id/txtView_product_name"/>

        <TextView
            android:id="@+id/txtView_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="650"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtView_product_name"/>

        <TextView
            android:id="@+id/txtView_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50$"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtView_product_quantity"/>

    </RelativeLayout>

</RelativeLayout>