<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtView_item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="Product Name"/>

    <TextView
        android:id="@+id/txtView_item_product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView_item_product_name"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        tools:text="Product Description"/>

    <TextView
        android:id="@+id/txtView_item_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtView_item_product_desc"
        android:padding="8dp"
        tools:text="Product Quantity"/>

    <TextView
        android:id="@+id/txtView_item_product_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtView_item_product_desc"
        android:padding="8dp"
        tools:text="Product Weight"/>

</RelativeLayout>